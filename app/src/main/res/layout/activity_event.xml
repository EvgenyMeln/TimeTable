<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Добавить событие:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Название события"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Время:"
        android:layout_marginTop="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Любым форматом, устраивающим вас"
        android:inputType="time" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="День недели" />

    <Spinner
        android:id="@+id/event_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/weekdays"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Комментарий" />

    <EditText
        android:id="@+id/event_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Необязательно"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/event_homework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Домашнее задание"
        android:inputType="textPersonName"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="125dp"
        android:onClick="onAddClick"
        android:text="Готово" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="125dp"
        android:onClick="onButtonBackClick"
        android:text="Назад" />

</LinearLayout>